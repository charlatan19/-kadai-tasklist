<h1>タスク一覧</h1>

<% if logged_in? %>
  <table class="table table-striped">
    <thead>
      <tr>
        <th>id</th>
        <th>status</th>
        <th>task</th>
      </tr>
    </thead>
    <tbody>
      <% @tasks.each do |task| %>
        <tr>
          <td><%= link_to task.id, task %></td>
          <td><%= task.status %></td>
          <td><%= task.content %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
  <div>
    <%= paginate @tasks %>
    
  </div>
  <div class="row">
    <aside class="col-sm-4">
      <%= link_to "タスクの登録", new_task_path %>

    </aside>

  </div>
<% else %>
  <%= render 'sessions/new' %>
<% end %> 